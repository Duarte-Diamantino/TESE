<?xml version="1.0"?>
<robot name="my_robot">

    <!-- Materials -->
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.6 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <!-- Base of the robot (scaled 50%) -->
    <link name="base_link">
        <inertial>
            <!-- keep mass/inertia or adjust if needed -->
            <mass value="20.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <!-- Chassi -->
        <visual>
            <geometry>
                <box size="0.3 0.2 0.025"/>
            </geometry>
            <origin xyz="0 0 0.0125" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
        <!-- Cabine -->
        <visual>
            <geometry>
                <box size="0.125 0.2 0.1"/>
            </geometry>
            <origin xyz="0.0875 0 0.075" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
        <!-- Capô -->
        <visual>
            <geometry>
                <box size="0.065 0.2 0.07"/>
            </geometry>
            <origin xyz="0.1825 0 0.035" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
        <!-- Caçamba -->
        <visual>
            <geometry>
                <box size="0.175 0.2 0.075"/>
            </geometry>
            <origin xyz="-0.0625 0 0.0625" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
    </link>

    <!-- Wheels scaled 50% -->
    <link name="back_left_wheel">
        <inertial>
            <mass value="2.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="grey"/>
        </visual>
    </link>
    <link name="back_right_wheel">
        <inertial>
            <mass value="2.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="grey"/>
        </visual>
    </link>
    <link name="front_left_wheel">
        <inertial>
            <mass value="2.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="grey"/>
        </visual>
    </link>
    <link name="front_right_wheel">
        <inertial>
            <mass value="2.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="grey"/>
        </visual>
    </link>

    <!-- Steering pivot links -->
    <link name="front_left_steer_link">
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
    </link>
    <link name="front_right_steer_link">
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
    </link>

    <!-- Steering joints -->
    <joint name="front_left_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_left_steer_link"/>
        <origin xyz="0.075 0.1275 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1"/>
    </joint>
    <joint name="front_right_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_right_steer_link"/>
        <origin xyz="0.075 -0.1275 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1"/>
        <mimic joint="front_left_steering_joint" multiplier="1.0" offset="0"/>
    </joint>

    <!-- Wheel joints -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="front_left_steer_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="front_right_steer_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="-0.075 0.1275 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="-0.075 -0.1275 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

</robot>
